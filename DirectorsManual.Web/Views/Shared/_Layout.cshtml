<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title – приложение Director's Manual</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<link href="~/Content/ErrorStyles.css" rel="stylesheet" />
	<link href="~/Content/adelina.css" rel="stylesheet" />
	<script src="~/Content/forLayoutA.js"></script>
</head>
<body>

    <!--/.Navbar -->
    @*<div class="navbar-brand" href="#">
            <img src="~/Images/default.jpg" width="60" height="30" alt="">
        </div>*@
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <!-- Кнопка «Гамбургер» -->
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main">
                    <span class=sr-only>Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Бренд или название сайта -->
                @Html.ActionLink("Director's Manual", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                  
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">About <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("About us", "About", "Home")</li>
                            <li role="separator" class="divider"></li><!--Разделитель между элементами в списке -->
                            <li>@Html.ActionLink("Contacts", "Contact", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Catalog", "List", "Product")</li>

                    <li>@Html.Action("Summary", "Cart")</li>
                    @if (User.IsInRole("admin"))
                    {
                        <li>
                            @Html.ActionLink("ADMIN", "Index", new { area = "Admin", controller= "Admin" })
                            @*@Html.ActionLink("ADMIN", "Index", "Admin")*@
                        </li>
                    }
                </ul>
                @if (Request.IsAuthenticated)
                {
                    @Html.Partial("_LoginPartial")
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Registration", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                <li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    @RenderSection("Splacs", false)

    <div class="container body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year – приложение Director`s Manual</p>
        </footer>
    </div>
    <script src="/js/bootstrap-submenu.min.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $('[data-toggle="dropdown"]').submenupicker();
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>
