@model IEnumerable<DirectorsManual.Domain.Entities.TContract_product>
@{
    ViewBag.Title = "Rez1StopP";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="panel panel-default">
	<div class="panel-heading">
		<h3>Список договоров на покупку готового товара</h3>
	</div>
	<div class="panel-body">
		<table class="table table-striped table-condensed table-bordered">
			<tr>
			
				<th>ID предприятия</th>
				<th class="text-right">ID покупателя</th>
				<th class="text-right">Кол-во товаров</th>
				<th>Общая стоимость</th>
				<th class="text-right">Дата отгрузки</th>
				@*<th class="text-center">Действия</th>*@
			</tr>
			@foreach (var item in Model)
			{
			<tr>
			
				<td class="text-right">@item.CompanyID</td>
				<td class="text-right">@item.CustomerID</td>
				<td class="text-right">@item.Kolvo_Products</td>
				<td class="text-right">@item.Price_Product.ToString("# грн")</td>
				<td class="text-right">@item.Date_delivery_product</td>

				@*<td>@Html.ActionLink(item.Name_Product, "Edit", new { item.ID })</td>*@
				@*<td class="text-center">
			@using (Html.BeginForm("Delete", "Admin"))
			{
				@Html.Hidden("ID", item.ID)
				<input type="submit"
					   class="btn btn-default btn-xs"
					   value="Удалить" />
			}
		</td>*@
			</tr>
			}
		</table>
	</div>
	<div class="panel-footer">
		@Html.ActionLink("Добавить товар", "FirstStorageProcedure", null,
			new { @class = "btn btn-default" })
	</div>
</div>