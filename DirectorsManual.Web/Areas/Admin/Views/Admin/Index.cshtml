@model IEnumerable<DirectorsManual.Domain.Entities.TProduct>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
	<div class="panel-heading">
		<h3>Список товаров</h3>
	</div>
	<div class="panel-body">
		<table class="table table-striped table-condensed table-bordered">
			<tr>
				
				<th>Название</th>
				<th class="text-right">Цена</th>
				<th class="text-center">Действия</th>
			</tr>
			@foreach (var item in Model)
			{
				<tr>
					
					<td>@Html.ActionLink(item.Name_Product, "Edit", new { item.ID })</td>
					<td class="text-right">@item.Price.ToString("# грн")</td>
					<td class="text-center">
						@using (Html.BeginForm("Delete", "Admin"))
						{
							@Html.Hidden("ID", item.ID)
							<input type="submit"
								   class="btn btn-default btn-xs"
								   value="Удалить" />
						}
					</td>
				</tr>
			}
		</table>
	</div>
	<div class="panel-footer">
		@Html.ActionLink("Добавить товар", "Create", null,
			new { @class = "btn btn-default" })
	</div>
</div>